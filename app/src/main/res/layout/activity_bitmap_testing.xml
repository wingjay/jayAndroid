<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.wingjay.blurimageviewlib.BlurImageView
        android:id="@+id/blur_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"/>

    <Button
        android:id="@+id/decode_bitmap_from_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decode bitmap from resource"
        />

    <Button
        android:id="@+id/decode_bitmap_from_resource_and_transform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decode bitmap from resource and transform into imageview"/>

    <ImageView
        android:id="@+id/bitmap_imageview"
        android:layout_width="400dp"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

</LinearLayout>